<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:adjustViewBounds="true"
        android:dividerPadding="3dp"
        android:showDividers="middle"
        android:orientation="horizontal"

        android:background="@color/color_gray"

        >

        <EditText
            style="@style/rating"
            android:text="5"
            />

        <EditText
            style="@style/rating"
            android:text="5"
            />

        <EditText
            android:id="@+id/number_of_projects"
            style="@style/rating"
            android:text="5"
            />

    </LinearLayout>


    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:adjustViewBounds="true"
                    android:dividerPadding="3dp"
                    android:showDividers="middle"
                    android:orientation="horizontal"

                    android:background="@color/color_gray"
                    >
                        <EditText

                        style="@style/rating"
                        android:text="Рейтинг"
                        android:textSize="@dimen/spacing_small_8"
                        />

                    <EditText

                       style="@style/rating"
                        android:text="Написано строк кода"
                        android:textSize="@dimen/spacing_small_8"
                        />

                   <EditText

                        style="@style/rating"
                        android:text="Проектов"
                        android:textSize="@dimen/spacing_small_8"
                       />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
        android:src="@drawable/ic_call_black_24dp"
        />
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/size_big_72"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/spacing_medium_32"
        android:layout_marginRight="@dimen/spacing_normal_16">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                style="@style/EditText"
                android:id="@+id/phone_et"
                android:hint="Мобильный"
                android:text="+7 (919) 611-86-37"
                android:inputType="phone"
                />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_small_24">>
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_markunread_black_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email_et"
                    style="@style/EditText"
                    android:hint="E-mail"
                    android:text="alinka.sattarova@gmail.com"
                    android:inputType="textEmailAddress"

                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_small_24">>
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_vk_grey_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    style="@style/EditText"
                    android:hint="Профиль в VK"
                    android:text="https://vk.com/id40609567"
                    android:inputType="textUri"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_small_24">>
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_repository_grey_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    style="@style/EditText"
                    android:hint="Репозиторий"
                    android:text="https://github.com/Volt-ran/DevIntensive"
                    android:inputType="textUri"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_small_24">>
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_account_box_black_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/VK_et"
                    style="@style/EditText"
                    android:hint="О себе"
                    android:text="Я не ошибаюсь - я принимаю рискованные решения.
Я не пью - я дегустирую.
Я не опаздываю - меня задерживают важные дела.
Я не флиртую - я оттачиваю мастерство общения.
Я не забываю - я не засоряю свою память излишней информацией.
Я не вру - я веду себя дипломатично.
Я не боюсь - я поступаю предусмотрительно.
Я не люблю сплетен - я просто выслушиваю мнения.
Я не изменяю - я меняю обстановку!"
                    android:inputType="textUri"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />


</LinearLayout>
