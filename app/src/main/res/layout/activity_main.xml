<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity"
    >

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_coordinator_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:background="@color/color_gray"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            app:contentScrim="@color/color_gray"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_image_size"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/userphoto"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AppTheme.PopupOverlay"
                android:titleTextColor="@color/color_white"
                app:layout_collapseMode="pin"/>


        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".ui.activities.MainActivity"
        >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:adjustViewBounds="true"
        android:dividerPadding="3dp"
        android:showDividers="middle"
        android:orientation="horizontal"

        android:background="@color/color_gray"

        >

        <EditText
            style="@style/rating"
            android:layout_weight="0.25"
            android:text="5"
            />
        <View
            style="@style/line"
            />

        <EditText
            style="@style/rating"
            android:layout_weight="0.5"
            android:text="5"
            />
        <View
            style="@style/line"
            />

        <EditText
            android:id="@+id/number_of_projects"
            style="@style/rating"
            android:layout_weight="0.25"
            android:text="5"
            />

    </LinearLayout>


    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:adjustViewBounds="true"
                    android:dividerPadding="3dp"
                    android:showDividers="middle"
                    android:orientation="horizontal"

                    android:background="@color/color_gray"
                    >
                        <EditText

                        style="@style/rating"
                        android:layout_weight="0.25"
                        android:text="Рейтинг"

                        android:textSize="@dimen/font_size_16"
                        />
        <View
            style="@style/line1"
            />

                    <EditText

                       style="@style/rating"
                       android:layout_weight="0.5"
                        android:text="Написано строк кода"
                        android:textSize="@dimen/spacing_normal_16"
                        />
        <View
            style="@style/line1"
            />

                   <EditText

                        style="@style/rating"
                        android:layout_weight="0.25"
                        android:text="Проектов"
                        android:textSize="@dimen/spacing_normal_16"
                       />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
        android:src="@drawable/ic_call_black_24dp"
        />
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/size_big_72"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/spacing_medium_32"
        android:layout_marginRight="@dimen/spacing_normal_16">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                style="@style/EditText"
                android:id="@+id/phone_et"
                android:hint="Мобильный"
                android:text="+7 (919) 611-86-37"
                android:inputType="phone"
                />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_small_24">>
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_markunread_black_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email_et"
                    style="@style/EditText"
                    android:hint="E-mail"
                    android:text="alinka.sattarova@gmail.com"
                    android:inputType="textEmailAddress"

                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_small_24">>
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_vk_grey_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    style="@style/EditText"
                    android:hint="Профиль в VK"
                    android:text="https://vk.com/id40609567"
                    android:inputType="textUri"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_small_24">>
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_repository_grey_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    style="@style/EditText"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Репозиторий"
                    android:text="https://github.com/Volt-ran/DevIntensive"
                    android:inputType="textUri"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_small_24">>
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_account_box_black_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    style="@style/EditText"
                    android:hint="О себе"
                    android:text="Я не ошибаюсь - я принимаю рискованные решения"
                    android:inputType="textUri"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line_size"
        android:background="@color/color_gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

    <!--</android.support.v4.widget.NestedScrollView>!-->

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drewer_header"
        app:menu="@menu/drawer_menu"/>
</android.support.v4.widget.DrawerLayout>